  "version": "2.0.0",
  "tasks": [
    {
        "label": "cargo build task",
        "type": "shell",
        "command": "cargo",
        "args": [
            "build",
            // "--release",
            // "--",
            // "arg1"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        }
    },
    {
        "label": "build and open documentation",
        "type": "shell",
        "command": "cargo",
        "args": [
            "doc",
            "--open",
        ],
    }
  ]
}